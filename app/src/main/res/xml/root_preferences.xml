<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/prefs_app_header">

        <SwitchPreference
            android:defaultValue="@bool/default_copy_mode"
            android:key="pref_copy_mode"
            android:title="@string/prefs_settings_copy_mode" />

        <EditTextPreference
            android:contextClickable="false"
            android:defaultValue="@string/default_source_folder"
            android:key="pref_source_folder"
            android:selectAllOnFocus="false"
            android:enabled="false"
            android:singleLine="true"
            android:title="@string/prefs_settings_source_folder_name"
            app:useSimpleSummaryProvider="true"
            />

        <EditTextPreference
            android:contextClickable="false"
            android:defaultValue="@string/default_target_folder"
            android:key="pref_target_folder"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/prefs_settings_target_folder_name"
            app:useSimpleSummaryProvider="true"
            />

        <SwitchPreference
            android:defaultValue="@bool/default_support_emulated_mode"
            android:key="pref_support_emulated_mode"
            android:title="@string/prefs_emulated_mode_support" />

    </PreferenceCategory>
</PreferenceScreen>