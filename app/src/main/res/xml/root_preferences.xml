<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/prefs_app_header">

        <EditTextPreference
            android:contextClickable="false"
            android:defaultValue="@string/default_source_folder"
            android:enabled="false"
            android:icon="@drawable/baseline_folder_light_blue_500_36dp"
            android:key="@string/prefs_key_source_folder"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:title="@string/prefs_label_source_folder_name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:contextClickable="false"
            android:defaultValue="@string/default_target_folder"
            android:icon="@drawable/baseline_sd_storage_light_blue_500_36dp"
            android:key="@string/prefs_key_target_folder"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/prefs_label_target_folder_name"
            app:useSimpleSummaryProvider="true" />

        <MultiSelectListPreference
            android:defaultValue="@array/media_types"
            android:entries="@array/media_types"
            android:entryValues="@array/media_types"
            android:icon="@drawable/baseline_perm_media_light_blue_500_36dp"
            android:key="@string/prefs_key_media_type"
            android:title="@string/prefs_label_media_types" />

    </PreferenceCategory>
</PreferenceScreen>